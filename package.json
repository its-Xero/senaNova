{
  "name": "talkanova",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "start:backend": "uvicorn backend.app.main:app --reload --host 0.0.0.0 --port 8000",
    "start:all": "concurrently \"uvicorn backend.app.main:app --reload --host 0.0.0.0 --port 8000\" \"next dev\"",
    "init-backend": "python backend/init_db.py",
    "init-frontend": "npm install",
    "init-all": "node ./scripts/init-all.js",
    "init-all:windows": "powershell -ExecutionPolicy Bypass -File ./install_deps.ps1",
    "test": "pytest -q",
    "lint": "next lint",
    "deploy": "firebase deploy"
  },
  "dependencies": {
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "concurrently": "^8.0.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "gh-pages": "^6.3.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
